extends ../layout

block content 
  h1 Update Book

  include errors
  
  form(action="/books/" + book.id, method="post") 
    p
      label(for="title") Title
      input(name="title" type="text" value=book.title id="title")
    p
      label(for="author") Author
      input(name="author" type="text" value=book.author id="author")
    p
      label(for="genre") Genre
      input(name="genre" type="text" value=book.genre id="genre")
    p
      label(for="year") Year
      input(name="year" type="text" value=book.year id="year")
    p
      input(class="update" type="submit" value='Update Book')

  form(action=`/books/${book.id}/delete` method="post" onsubmit="return confirm('Do you really want to delete this book?')")
    p
      a(class='button cancel' href="/books") Cancel
    p
      input(class="submit delete" type="submit" value='Delete Book')